<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_author_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_first_view_top_margin"
        android:layout_marginStart="@dimen/common_view_side_margin"
        android:layout_marginEnd="@dimen/common_view_side_margin"
        android:layout_marginLeft="@dimen/common_view_side_margin"
        android:layout_marginRight="@dimen/common_view_side_margin"
        android:text="@string/app_author_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <ListView
        android:id="@+id/lv_author_sources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_author_description"
        android:layout_marginTop="@dimen/common_first_view_top_margin"
        android:layout_marginStart="@dimen/common_view_side_margin"
        android:layout_marginEnd="@dimen/common_view_side_margin"
        android:layout_marginLeft="@dimen/common_view_side_margin"
        android:layout_marginRight="@dimen/common_view_side_margin"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:textSize="12sp">

    </ListView>
</RelativeLayout>